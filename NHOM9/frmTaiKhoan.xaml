        <Button x:Name="btSua" Content="Sua" HorizontalAlignment="Left" Margin="378,307,0,0" VerticalAlignment="Top" Width="95" Click="btSua_Click"/>
        <Button x:Name="bbtXoa" Content="Xoa" HorizontalAlignment="Left" Margin="523,307,0,0" VerticalAlignment="Top" Width="95" Click="bbtXoa_Click"/>
        <Button x:Name="btTroVe" Content="Tro ve" HorizontalAlignment="Left" Margin="662,307,0,0" VerticalAlignment="Top" Width="95" Click="btTroVe_Click"/>

    </Grid>
</Window>
