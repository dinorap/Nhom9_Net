        <Label Content="Loai tai khoan" HorizontalAlignment="Left" Margin="23,191,0,0" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txtTaiKhoan" HorizontalAlignment="Left" Margin="137,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
