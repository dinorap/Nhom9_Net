<Window x:Class="NHOM9.frmDuAn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NHOM9"
        mc:Ignorable="d"
        Title="frmDuAn" Height="650" Width="1200" Loaded="Window_Loaded">
    <Grid>
        <Grid>
            <Label Content="Danh sách dự án" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="141" Height="26"/>
            <DataGrid x:Name="dgvMain" HorizontalAlignment="Center" Height="343" Margin="0,41,0,0" VerticalAlignment="Top" Width="1180" Background="#FFAFAFAF" SelectionChanged="dgvMain_SelectionChanged"/>
            <Label Content="ID Dự Án" HorizontalAlignment="Left" Margin="16,420,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtid" HorizontalAlignment="Left" Margin="118,424,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355" Height="18" HorizontalContentAlignment="Left" IsEnabled="False"/>
            <Label Content="Tên Dự Án" HorizontalAlignment="Left" Margin="16,458,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtten" HorizontalAlignment="Left" Margin="118,462,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355" HorizontalContentAlignment="Left"/>
            <Label Content="Số Nhân Viên" HorizontalAlignment="Left" Margin="16,496,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtso" HorizontalAlignment="Left" Margin="118,500,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
            <Label Content="Mô tả" HorizontalAlignment="Left" Margin="16,530,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtchuthich" HorizontalAlignment="Left" Margin="118,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355" Height="80"/>
            <Button x:Name="btnreset" Content="Reset" HorizontalAlignment="Left" Margin="491,428,0,0" VerticalAlignment="Top" Height="20" Width="36" Click="btnreset_Click"/>
            <Button x:Name="btnthem" Content="Thêm" HorizontalAlignment="Left" Margin="550,428,0,0" VerticalAlignment="Top" Height="20" Width="36" Click="btnthem_Click"/>
            <Button x:Name="btnsua" Content="Sửa" HorizontalAlignment="Left" Margin="611,428,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.655,3.98" Height="20" Width="36" Click="btnsua_Click"/>
            <Button x:Name="btnxoa" Content="Xóa" HorizontalAlignment="Left" Margin="674,428,0,0" VerticalAlignment="Top" Height="20" Width="36" Click="btnxoa_Click"/>
            <Button x:Name="btntrove" Content="Trở về" HorizontalAlignment="Left" Margin="742,428,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.081,0.763" Click="btntrove_Click"/>

        </Grid>
    </Grid>
</Window>